<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/show_aluno"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.readingcsv.show_aluno">

    <Button
        android:id="@+id/buttonAusente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ausente"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/buttonPresente"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="348dp"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        />

    <Button
        android:id="@+id/buttonPresente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Presente"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="115dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="1.0"
        />

    <TextView
        android:id="@+id/status_aluno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/nome_aluno"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.256" />

    <TextView
        android:id="@+id/nome_aluno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="173dp"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/prev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anterior"
        app:layout_constraintLeft_toRightOf="@+id/buttonAusente"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="119dp"
        app:layout_constraintTop_toBottomOf="@+id/status_aluno" />

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proximo"
        app:layout_constraintLeft_toRightOf="@+id/prev"
        android:layout_marginLeft="0dp"
        app:layout_constraintRight_toLeftOf="@+id/buttonPresente"
        android:layout_marginRight="0dp"
        android:layout_marginTop="118dp"
        app:layout_constraintTop_toBottomOf="@+id/status_aluno"
        app:layout_constraintHorizontal_bias="1.0" />

</android.support.constraint.ConstraintLayout>
